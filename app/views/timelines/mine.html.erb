<% provide(:title, "Inviter") %>
<div id="my-container" class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-3 col-md-offset-0 col-lg-2">
    </div>
    <div class="col-xs-12 col-sm-10 col-md-9 col-lg-8 col-sm-offset-1 col-md-offset-0">
      <div class="panel panel-default clearfix">
        <div class="panel-heading clearfix">
          <h2>
            <%= current_user.name %><br/>
            <br/>
          </h2>
        </div>
        <div class="panel-body">
          <% if @mine_timelines.any? %>
              <% @mine_timelines.each do |timeline| %>
                  <div>
                    <%= link_to "<span class=\"icon icon-users\"></span> #{timeline.name}".html_safe, timeline_path(timeline) %>
                  </div>
              <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

