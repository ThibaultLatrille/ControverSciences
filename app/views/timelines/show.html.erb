<% provide(:title, @timeline.name) %>

<div class="row">

<div class="col-lg-2">
  <div class="panel panel-default">
  <div class="panel-body">
  <button class="btn btn-default stick" data-placement="bottom"
          data-toggle="tooltip" title="<%= @timeline.nb_contributors %> contributeurs" >
    <%= image_tag("icons/myicon-users.svg", alt: "ref", height: "32px") %>
    <%= @timeline.nb_contributors %>
  </button>
  <button class="btn btn-default stick" data-placement="bottom"
          data-toggle="tooltip" title="<%= @timeline.nb_references %> références scientifiques" >
    <%= image_tag("icons/myicon-reference.svg", alt: "ref", height: "32px") %>
    <%= @timeline.nb_references %>
  </button>
  <button class="btn btn-default stick" data-placement="right"
          data-toggle="tooltip" title="<%= @timeline.nb_edits %> contributions" >
    <%= image_tag("icons/myicon-comment.svg", alt: "ref", height: "32px") %>
    <%= @timeline.nb_edits %>
  </button>
  <br/>
  <br/>
  <br/>
<strong>
  Thèmes :
  <br/>
  <br/>
</strong>
    <% @timeline.get_tag_list.each do |name| %>
        <button class="btn btn-default stick" data-placement="top"
                data-toggle="tooltip" title="<%= tags_hash[name] %>">
          <%= image_tag("icons/myicon-#{name}.svg", alt: name, height: "32px")%>
        </button>
    <% end %>
  </div>
</div>
</div>

<div class="col-xs-12 col-sm-10 col-md-10 col-lg-8 col-sm-offset-1 col-lg-offset-0">
<div class="panel panel-default">
  <div class="panel-heading">
    <span class="pull-right">
        <button type="button" class="btn btn-default" data-placement="left"
                data-toggle="tooltip" value="<%= @timeline.id %>" data-validate="/likes/add"
                title="<%= @timeline.nb_likes.to_s + " personnes s'intéressent à cette controverse" %>">
          <span class="glyphicon glyphicon-thumbs-up" id="like<%= @timeline.id %>"> <%= @timeline.nb_likes %> </span>
        </button>
    </span>
      <div class="panel-heading">
        <h3><%= @timeline.name %></h3> par <%= link_to @timeline.user_name, user_path( @timeline.user_id) %>
      </div>
  </div>
  <div class="panel-body">
    <% if @summary %>
        <div class="text-justify">
        <%= @summary.markdown.html_safe %>
        </div>
        <br/>
        <span class="pull-right">
        Par <%= link_to @summary.user_name, user_path( @summary.user_id) %>
        </span>
        <br/>
        <%= link_to 'Voir les synthèses de cette controverse'.html_safe,
                    summaries_path( timeline_id: @timeline.id ),
                    class: "btn btn-default" %>
    <% else %>
        <%= link_to '<span class="glyphicon glyphicon-pencil" >
    </span> Pas de synthèses, soyez le premier'.html_safe,
                    new_summary_path( timeline_id: @timeline.id ),
                    class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="row" id="my-timeline">
    <div class="timeline-jquery-controverse">
    </div>
</div>


</div>
  <% if logged_in? %>
<div class="col-xs-12 col-lg-2">
<%= link_to "<span class=\"glyphicon glyphicon-eye-open\" >
</span> S'abonner à cette controverse".html_safe,
              following_timelines_path( timeline_id: @timeline.id ),
              method: :post, class: "btn btn-block btn-primary" %>
<%= link_to '<span class="glyphicon glyphicon-plus-sign" >
</span> Ajouter une référence'.html_safe,
          new_reference_path( timeline_id: @timeline.id),
          class: "btn btn-block btn-success" %>
<%= link_to '<span class="glyphicon glyphicon-pencil" >
</span> Ecrire une synthèse'.html_safe,
          new_summary_path( timeline_id: @timeline.id),
          class: "btn btn-block btn-success" %>
</div>

 <% end %>
</div>

<div class="modal fade" id="iptaken" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"> Votre intérêt pour cette controverse a déjà été prit en compte. </h4>
      </div>
      <div class="modal-body clearfix">
        Votre adresse IP a déjà été utilisé pour cette action, si vous n'avez jamais effectué cette action,
        c'est probablement que quelqu'un connecté au même réseau que vous l'a fait avant vous !
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"> Ok </button>
      </div>
    </div>
  </div>
</div>


<script type="text/javascript">
    $(function() {
        $('[data-validate]').click(function() {
            $this = $(this);
            $.get($this.data('validate'), {
                id: $this.val()
            }).success(function() {
                var $like = $('#like'+$this.val());
                $like.text(' '+(parseInt($like.text())+1));
            }).error(function() {
                $('#iptaken').modal('show');
            });
        });
    });
    function toRef( id ){
        if ( jQuery.inArray( 'collapsed', $("#ref-"+id)[0].classList ) ){
            $(".collapse-all").trigger({ type: "click" });
            $("#ref-btn-"+id).trigger({ type: "click" });
        }
    }
    $(document).ready(function(){
        $('[data-toggle="tooltip"]').tooltip({container: 'body'});
        $('.timeline-jquery-controverse').verticalTimeline({
            data: <%= raw render(template: "timelines/show.json.rabl") -%>,
            handleResize: true,
        });
    });
</script>