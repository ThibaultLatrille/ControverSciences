<% if patch.comment_id %>
    <%= category_hash[patch.comment_short.reference.category][patch.field] %> <%= t('views.model.of_reference').downcase %> <br>
    <%= link_to patch.comment_short.reference.title, reference_path(patch.comment_short.reference_id) %> <br>
    <%= t('views.model.in_timeline') %> <br>
    <%= link_to patch.comment_short.timeline_name.html_safe, timeline_path(patch.comment_short.timeline_id) %>
<% elsif patch.summary_id %>
    <%= t('views.model.summary') %> <br>
    <%= link_to patch.summary_short.timeline_name.html_safe, timeline_path(patch.summary_short.timeline_id) %>
<% elsif patch.frame_id %>
    <%= link_to t("views.model.frame_#{patch.field}"), frame_path(patch.frame_id) %> <br>
    <%= t('views.model.of_timeline').downcase %> <br>
    <%= link_to patch.frame_short.timeline_name.html_safe, timeline_path(patch.frame_short.timeline_id) %>
<% end %>