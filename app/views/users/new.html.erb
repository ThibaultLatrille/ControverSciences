<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "p. ex.  C. Darwin" %>
        <%= f.label :email %>
        <%= f.text_field :email, class: 'form-control', placeholder: "p. ex. Charles.darwin@univ-montp2.fr" %>

        <% if f.object.errors[:email].any? %>
            <%= f.label :why, "Pourquoi souhaitez vous contribuer" %>
            <%= f.text_area :why, class: 'form-control textarea' %>
        <% end %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "CrÃ©er mon compte", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<%= javascript_tag do %>
    $("textarea").autosize();
<% end %>