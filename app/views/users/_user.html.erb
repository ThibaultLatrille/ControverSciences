<div class="col-xs-12 col-sm-3 col-md-3 col-lg-2 comment center">
  <a class="center" href="<%= user_path(user) %>" style="color: white">
    <div class="thumbnail timeline-body hvr-grow">
      <div style="width: 100%" class="center">
        <% if user.user_detail && user.user_detail.id && user.user_detail.picture? %>
            <%= image_tag user.user_detail.picture_url, class: "img-rounded img-responsive" %>
        <% else %>
            <%= image_tag "favicon.svg", class: "img-rounded img-responsive"%>
        <% end %>
      </div>
      <div class="caption">
        <h4><%= user.name %></h4>
      </div>
    </div>
  </a>
</div>