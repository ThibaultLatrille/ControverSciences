<% provide(:title, "Notifications") %>

<div class="row">
  <div class="col-md-12 col-lg-6">
    <div class="panel panel-primary">
      <div class="panel-body">
        Vos résumés de controverses qui ont prit la première place.
      </div>
      <table id="notification-sel-comments" class="table table-striped table-hover">
        <thead>
        <tr>
          <th class="col-sm-4"> Vos analyses qui ont prit la première place
            (<%= current_user.notifications_summary_win %>) </th>
          <th class="col-sm-3"> De la controverse </th>
        </tr>
        </thead>
        <tbody class="page">
        <% if !@summary_wins.any? %>
            <tr class="notification-sel-comment">
              <td>Pas de changements</td>
              <td></td>
            </tr>
        <% else %>
            <% @summary_wins.each do |com| %>
                <tr class="notification-sel-comment">
                  <td> <%= link_to com.content[0..70]+"...", notifications_summary_selection_win_path(id: com.id ) %>   </td>
                  <td> <%= link_to com.timeline_name, timeline_path(com.timeline_id ) %>   </td>
                </tr>
            <% end %>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="col-md-12 col-lg-6">
    <div class="panel panel-danger">
      <div class="panel-body">
        Vos résumés de controverses qui ont perdu la première place.
