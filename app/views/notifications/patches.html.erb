<% provide(:title, "Suggestions d'amelioration") %>
<h1>
  <%= t('views.header.notifs') %>
</h1>

<div id="my-container" class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-lg-8 col-lg-offset-2">
      <div class="panel panel-primary">
        <% if !@patches.blank? %>
            <br/>
            <br/>
            &nbsp &nbsp
            &nbsp <span class="blue" style="font-size: 2em;">
                <span class="fat icon-bug-<%= rand(18) %>">
              </span>
                Les suggestions en attentes
              </span>
            <div class="row">
              <div class="col-xs-10 col-xs-offset-1">
                <% @patches.keys.each do |frame_id| %>
                    <% patch = @patches[frame_id].first %>
                    <hr style="margin: 1em 3em 1em 3em ">
                    <div class="panel panel-default">
                      <div class="panel-body">
                        <b>
                          <%= link_to t('views.model.frame'),
                                      frame_path(patch.frame_id) %> <%= t('views.model.of_timeline').downcase %>
                          <%= link_to patch.frame_short.timeline_name.html_safe, timeline_path(patch.frame_short.timeline_id) %>
                        </b>
                        <br/>
                        <br/>

                        <div class="pull-right">
                          <%= link_to "<span class=\"badge badge-li\">#{@patches[frame_id].length}</span> Ã‰tudier les suggestions".html_safe,
                                      patches_target_path(frame_id: frame_id),
                                      class: "btn btn-primary" %>
                        </div>
                      </div>
                    </div>
                <% end %>
              </div>
            </div>
            <hr style="margin: 0 3em 2em 3em ">
        <% else %>
            <div class="panel-body">
          <span style="font-size: 1.5em;">
          <%= t('views.notifications.no_notifs') %>
          </span>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
