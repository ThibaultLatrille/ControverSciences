<% provide(:title, "Suggèrer une amélioration") %>

<div class="col-xs-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3> Les améliorations à apporter à ControverSciences </h3>
    </div>
    <div class="panel-body">
      <div class="col-xs-12 col-lg-3">
        <div class="panel panel-default">
          <div class="panel-heading">
            Vous avez une idée, faites le savoir !
          </div>
          <div class="panel-body">
            <%= form_for( @suggestion) do |f| %>
                <%= render 'shared/error_messages', object: f.object %>

                <div class="form-group">
                  <%= f.label :comment, class: 'control-label' %><br>
                  <%= f.text_area :comment, class: 'form-control' %>
                  <span class="help-block"></span>
                </div>
                <div class="row">
                  <div class="col-xs-12 col-md-6">
                    <%= f.text_field :name, class: 'form-control selectwidthauto' %>
                  </div>
                  <div class="col-xs-12 col-md-6">
                    <div class="pull-right">
                    <%= f.submit 'Publier', class: 'btn btn-primary'%>
                    </div>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-lg-7">
        <div class="row">
                <%= render @suggestions %>
                <%= paginate @suggestions %>
        </div>
      </div>
      <div class="col-xs-12 col-lg-2">
        <%= link_to "La mission de ControverSciences", help_path,
                    class: "btn btn-block btn-primary" %>
        <%= link_to "Tutoriel pour les visiteurs", how_to_path,
                    class: "btn btn-block btn-primary" %>
        <%= link_to "Tutoriel pour les contributeurs", how_to_edit_path,
                    class: "btn btn-block btn-primary" %>
      </div>
    </div>
  </div>
</div>