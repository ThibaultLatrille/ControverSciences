<div class="panel panel-info">
  <div class="panel-body clearfix">
    <div class="col-xs-12 col-lg-2">
      <div class="clearfix pull-right">
        <button type="button" class="btn btn-success" data-placement="left" data-value="true"
                data-toggle="tooltip" value="<%= suggestion.id %>" data-validate="/suggestion_votes/add"
                title="<%= suggestion.plus.to_s + " personnes sont d'accords" %>">
          <span class="glyphicon glyphicon-thumbs-up"> <%= suggestion.plus %> </span>
        </button>
        <button type="button" class="btn btn-danger" data-placement="left" data-value="false"
                data-toggle="tooltip" value="<%= suggestion.id %>" data-validate="/suggestion_votes/add"
                title="<%= suggestion.minus.to_s + " personnes ne sont pas d'accords" %>">
          <span class="glyphicon glyphicon-thumbs-down"> <%= suggestion.minus %> </span>
        </button>
        <br/>
        <br/>
      </div>
    </div>
    <div class="col-xs-12 col-lg-10">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="text-justify">
            <%= suggestion.content_markdown.html_safe %>
          </div>
          <% if suggestion.timeline_id && suggestion.timeline_id > 0 %>
              <br/>
              <%= link_to "<span class=\"icon-frog\"></span> Voir la controverse".html_safe, timeline_path(suggestion.timeline_id), class: "btn btn-primary pull-right" %>
          <% end %>
          <% if logged_in? && suggestion.user_id == current_user.id %>
              <%= link_to "<span class=\"glyphicon glyphicon-trash\"></span> Supprimer".html_safe, suggestion_path(suggestion.id), method: :delete,
                          data: { confirm: "Etes vous certain ?" },
                          class: "btn btn-danger" %>
              <%= link_to "<span class=\"glyphicon glyphicon-cog\"></span> Modifier".html_safe, edit_suggestion_path(suggestion.id),
                          class: "btn btn-primary" %>
          <% end %>
        </div>
        <div class="panel-footer">
          <div class="clearfix">
            <div id="button<%= suggestion.id %>" class="pull-right">
              <br/>
              <% if suggestion.children > 0 %>
                  <%= link_to "<span class=\"glyphicon glyphicon-list\"></span> Voir les réactions (#{suggestion.children})".html_safe, fetch_children_path(:suggestion_id => suggestion.id),
                              :remote => true, id:"fetch", class: "btn btn-info" %>
              <% else %>
                  <%= link_to "<span class=\"glyphicon glyphicon-comment\"></span> Repondre à ce commentaire".html_safe, fetch_children_path(:suggestion_id => suggestion.id),
                              :remote => true, id:"fetch", class: "btn btn-info" %>
              <% end %>
            </div>
          <span class="timestamp">
            Publié il y a <%= time_ago_in_words(suggestion.created_at) %> par
            <% if suggestion.user_id %>
                <%= link_to suggestion.name, user_path(suggestion.user_id) %>
            <% else %>
                <%= suggestion.name %>
            <% end %>
           </span>
          </div>
          <div id="children<%= suggestion.id %>">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

