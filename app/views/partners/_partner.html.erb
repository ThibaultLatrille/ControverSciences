<div class="partner col-xs-12">
  <div class="row">
    <div class="col-xs-12 col-sm-3">
      <a href="<%= partner.url %>" target="_blank" class="hvr-grow">
        <%= image_tag partner.picture_url, class: "img-circle img-responsive" %>
      </a>
    </div>
    <div class="col-xs-12 col-sm-9">
      <div class="panel panel-primary">
        <div class="panel-body">
          <h3>
            &nbsp &nbsp <%= link_to partner.name_markdown, partner.url, target: "_blank", class: "hvr-grow" %>
          </h3>
          <div class="justify">
            <%= partner.description_markdown %>
          </div>
          <br>
          <div class="justify">
            <%= partner.why_markdown %>
          </div>
          <% if logged_in? && current_user.admin %>
              <div class="pull-right" style="margin-right: 8px">
                <%= link_to "<span class=\"glyphicon glyphicon-edit\"></span>".html_safe,
                            edit_partner_path(partner.id),
                            class: "btn btn-primary" %>
                <%= link_to "<span class=\"glyphicon glyphicon-trash\"></span>".html_safe,
                            partner_path(partner.id),
                            method: :delete,
                            data: {confirm: t('views.default.confirm')},
                            class: "btn btn-danger" %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>