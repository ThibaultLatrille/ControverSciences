<div class="partner col-xs-12">
  <div class="row">
    <div class="col-xs-12 col-sm-3">
      <a href="<%= partner.url %>" target="_blank" class="hvr-grow">
        <%= image_tag partner.picture_url, class: "img-circle img-responsive" unless partner.picture_url.blank? %>
      </a>
    </div>
    <div class="col-xs-12 col-sm-9">
      <div class="panel panel-primary">
        <div class="panel-body">
          <div class="pull-right" style="margin-left: 10px">
            <% if my_loves && my_loves.include?(partner.id) %>
                <button type="button" class="btn btn-success" data-placement="left"
                        data-toggle="tooltip" value="<%= partner.id %>" data-validate="/partner_loves"
                        title="<%= t('views.default.you_and' ) + " " + t('views.pluralize.loves', count: partner.loves - 1 ).html_safe %>">
                  <span class="glyphicon glyphicon-heart"> <%= partner.loves %></span>
                </button>
            <% else %>
                <button type="button" class="btn btn-default green" data-placement="left"
                        data-toggle="tooltip" value="<%= partner.id %>" data-validate="/partner_loves"
                        title="<%= t('views.pluralize.loves', count: partner.loves ).html_safe %>">
                  <span class="glyphicon glyphicon-heart"> <%= partner.loves %></span>
                </button>
            <% end %>
          </div>
          <h3>
            &nbsp &nbsp <%= link_to partner.name_markdown, partner.url, target: "_blank", class: "hvr-grow" %>
          </h3>
          <div class="justify">
            <%= partner.description_markdown.html_safe %>
          </div>
          <br>
          <div class="justify">
            <%= partner.why_markdown.html_safe %>
          </div>
          <% if logged_in? && current_user.admin %>
              <div class="pull-right" style="margin-right: 8px">
                <%= link_to "<span class=\"glyphicon glyphicon-edit\"></span>".html_safe,
                            edit_partner_path(partner.id),
                            class: "btn btn-primary" %>
                <%= link_to "<span class=\"glyphicon glyphicon-trash\"></span>".html_safe,
                            partner_path(partner.id),
                            method: :delete,
                            data: {confirm: t('views.default.confirm')},
                            class: "btn btn-danger" %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>