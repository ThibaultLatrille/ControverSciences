<% provide(:title, "Liens morts") %>

<div id="my-container" class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-lg-8 col-lg-offset-2">
      <div class="panel panel-primary">
        <% if @dead_links.any? %>
            <div class="panel panel-default">
              <table id="notification-comments" class="table table-striped table-hover">
                <thead>
                <tr>
                  <th class="col-xs-10"> <%= t('views.model.reference') %> </th>
                  <th class="col-xs-2 center"> <%= t('views.buttons.delete') %> </th>
                </tr>
                </thead>

                <tbody class="page">
                <% @dead_links.each do |dead_link| %>
                    <tr class="notification-comment">
                      <td> <%= link_to dead_link.reference.title_display.html_safe, reference_path(dead_link.reference), class: "btn btn-primary" %>   </td>
                      <td> <%= link_to "<span class=\"glyphicon glyphicon-trash\"> </span>".html_safe,
                                       dead_link_path(dead_link.id), method: :delete,
                                       data:                         {confirm: t('views.default.confirm')} %>    </td>
                    </tr>
                <% end %>
                </tbody>
              </table>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>