<%= link_to "<span class=\"bigger glyphicon glyphicon-pencil\"></span> Répondre".html_safe,
            "#newissue#{reponse}",
            class: "btn btn-default pull-right",
            'data-toggle' => 'modal' %>

<div class="modal fade" id="newissue<%= reponse %>" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <br/>
      </div>
      <div class="modal-body clearfix">
        <div class="panel panel-default">
          <div class="panel-heading">
            <p>
              Vous pouvez répondre ici
            </p>
          </div>
        </div>
        <br>
        <%= form_for(:reponse, url: reponses_path, remote: true,
                     html: {role: :form, 'data-model' => 'reponse'}) do |f| %>
            <%= f.hidden_field :reponse_id, value: reponse %>
            <%= f.hidden_field :title, value: title %>
            <div class="form-group">
              <%= f.label :body, "Votre réponse", class: 'control-label' %>
              <br>
              <%= f.text_area :body, class: 'form-control textarea' %>
              <span class="help-block"></span>
            </div>
            <div class="form-group">
              <%= f.label :author, "Votre nom et adresse mail", class: 'control-label' %>
              <br>
              <%= f.text_field :author, class: 'form-control' %>
              <span class="help-block"></span>
            </div>
            <input type="reset" style="display:none;"/>

            <div class="actions pull-right">
              <%= f.button "#{t('views.buttons.send')} &nbsp <span class=\"glyphicon glyphicon-send\" aria-hidden=\"true\"></span>".html_safe,
                           class: 'btn btn-success',
                           data: {disable_with: "<span class=\"glyphicon glyphicon-send\" aria-hidden=\"true\"></span> &nbsp #{t('views.buttons.sending')} "} %>
            </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <div class="panel panel-default">
          <div class="panel-heading">
            <p>
              Si vous avez des questions répondez à <a href="mailto:lea.rambaud@controversciences.org">lea.rambaud@controversciences.org</a>
            </p>
          </div>
        </div>
        <br>
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('views.footer.close') %></button>
      </div>
    </div>
  </div>
</div>