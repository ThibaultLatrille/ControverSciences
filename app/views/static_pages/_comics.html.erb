          <img class="img-responsive img-icons hvr-grow" src="<%= image_path "comics-icons/juge.png" %>" alt="Le juge"/>
          <img class="img-responsive img-icons hvr-grow" src="<%= image_path "comics-icons/ecrivain.png" %>" alt="L’écrivain"/>
          <img class="img-responsive img-icons hvr-grow" src="<%= image_path "comics-icons/evaluateur.png" %>" alt="L’évaluateur"/>
          <img class="img-responsive img-icons hvr-grow" src="<%= image_path "comics-icons/bienveillant.png" %>" alt="Le bienveillant"/>
        </nav>
      </div>
      <br>
      <nav>
        <a id="bb-nav-prev" href="#" class="btn btn-default">
          <span class="glyphicon glyphicon-menu-left"></span>
          <span class="text">Le bienveillant</span>
        </a>
        <a id="bb-zoom-in" href="#" class="btn btn-default">
          <span class="glyphicon glyphicon-zoom-in"></span>
        </a>
        <a id="bb-nav-next" href="#" class="btn btn-default">
          <span class="text">Le sphinx</span>
          <span class="glyphicon glyphicon-menu-right"></span>
        </a>
      </nav>
      <br>
      <br>

      <div id="bb-bookblock" class="bb-bookblock">
        <div id="bb-left-page">
        </div>
        <div id="bb-right-page">
        </div>
        <div id="opacity">
          <img class="bb-image img-responsive clearfix" src=<%= image_path "comics/encyclopedique.png" %>>
        </div>
        <div class="bb-item">
          <img class="img-responsive" src="<%= image_path "comics/enthousiaste.png" %>" alt="L’enthousiaste"/>
        </div>
        <div class="bb-item">
          <img class="img-responsive" src="<%= image_path "comics/sphinx.png" %>" alt="Le sphinx"/>
        </div>
        <div class="bb-item">
          <img class="img-responsive" src="<%= image_path "comics/seigneur.png" %>" alt="Le Seigneur des titres"/>
        </div>
        <div class="bb-item">
          <img class="img-responsive" src="<%= image_path "comics/encyclopedique.png" %>" alt="L'encyclopédique"/>
        </div>
        <div class="bb-item">
          <img class="img-responsive" src="<%= image_path "comics/analyste.png" %>" alt="L’analyste"/>
        </div>
        <div class="bb-item">
          <img class="img-responsive" src="<%= image_path "comics/juge.png" %>" alt="Le juge"/>
        </div>
        <div class="bb-item">
          <img class="img-responsive" src="<%= image_path "comics/ecrivain.png" %>" alt="L’écrivain"/>
        </div>
        <div class="bb-item">
          <img class="img-responsive" src="<%= image_path "comics/evaluateur.png" %>" alt="L’évaluateur"/>
        </div>
        <div class="bb-item">
          <img class="img-responsive" src="<%= image_path "comics/bienveillant.png" %>" alt="Le bienveillant"/>
        </div>
      </div>
    </div>
  </div>
</div>
<br><br>
<div class="row">
  <% if logged_in? %>
      <%= link_to "<b><span class=\"icon-user bigger\" ></span> #{t('views.header.user')}</b>".html_safe,
                  user_path(current_user),
                  class: "btn btn-lg btn-primary home-btn center" %>
  <% else %>
      <%= link_to "<b><span class=\"icon-4 bigger\" ></span> #{t('views.sessions.new_user')}</b>".html_safe,
                  signup_path,
                  class: "btn btn-lg btn-primary" %>
      <%= link_to "<b><span class=\"icon-users bigger\" ></span> #{t('views.header.login')}</b>".html_safe,
                  login_path,
                  class: "btn btn-lg btn-primary center" %>
  <% end %>
</div>