<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.18.0/TweenMax.min.js"></script>

<script type="text/javascript">
    $(document).ready(function(){
        var $dots=$(".pagination-dot")
                ,$current=$(".pagination-current")
                ,$items=$(".slider")

                ,spacing=parseFloat($dots.css("width"))+(parseFloat($dots.css("marginLeft"))*2)
                ,halfSpacing=spacing/2
                ,startPos

                ,lastItem=0
                ,lastItemR=0
                ,lastTime=Date.now()
                ;

        startPos=$dots.eq(0).position().left;
        $current.data("pos",{x:startPos});

        $dots.on('click', function(event){
            var $cur=$(this);
            $items.eq($cur.index()).click();
            var dest=($cur.index())*spacing;
            TweenMax.to($current.data("pos"),0.6,{
                x:startPos+dest,
                onUpdate:updatePos,
                onComplete:updatePos,
                ease:Quint.easeOut
                // ease:Elastic.easeOut,
                // easeParams:[1.1,0.6]
            });
        });

        $items.on('mouseover', function () {
                $dots.eq($(this).index()).click();
        });

        var dragging=false;
        var startDrag={x:0,y:0};

        function updatePos(){
            var pos=$current.data("pos").x-startPos;
            var scale=pos%spacing;
            if(scale>halfSpacing){
                scale=halfSpacing-(scale-halfSpacing);
            }
            scale=1-((scale/halfSpacing)*0.35);
            TweenMax.set($current,{
                x:pos+startPos,
                scale:scale*1.4,
                force3D:true
            });

            var curItem=pos/spacing,
                    curItemR=Math.round(curItem)
                    ;
            var now=Date.now();
            var diff=now-lastTime;
            var deltaTime=diff/(1000/60);
            lastTime=now;
            if(lastItemR!=curItemR){
                var $bounceDot=$dots.eq(lastItemR);
                TweenMax.to($bounceDot,0.1,{
                    x:70*((curItem-lastItem)/deltaTime),
                    ease:Quad.easeOut,
                    onComplete:function(){
                        TweenMax.to($bounceDot,1,{
                            x:0,
                            ease:Elastic.easeOut,
                            easeParams:[1.1,0.5]
                        })
                    }
                })
            }
            lastItem=curItem;
            lastItemR=curItemR;
        }
        $('.navigation').on("click", function () {
            $(".navigation").removeClass("active");
            $this = $(this);
            $this.addClass("active");
            $(".leading").addClass("not-activated");
            $(".head").addClass("not-activated");
            $("#head-" + $this.data("body")).removeClass("not-activated");
            $("#body-" + $this.data("body")).removeClass("not-activated");
            startPos=$dots.eq(0).position().left;
            $current.data("pos",{x:startPos});
            $dots.eq(0).click();
            $(".menu-toggle-button").click();
        });
        $('.sub-navigation').on("click", function () {
            $this = $(this);
            console.log($this.data("parent"));
            $(".sub-navigation", "#head-" + $this.data("parent")).removeClass("active");
            $this.addClass("active");
            $(".sub-leading", "#body-" + $this.data("parent")).addClass("not-activated");
            $("#" + $this.data("target")).removeClass("not-activated");
        });
        $(".menu-toggle-button").trigger("mousedown")
    });
</script>

