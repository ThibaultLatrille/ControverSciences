                  $("#items .item").removeClass("opaque");

                  var newImage = $(this).index();

                  $("#items .item").eq(newImage).addClass("opaque");

                  $(".slider").removeClass("active");
                  $(this).addClass("active");
              });
              $('.slider').on('click', function () {
                  $("#items .item").removeClass("opaque");

                  var newImage = $(this).index();

                  $("#items .item").eq(newImage).addClass("opaque");

                  $(".slider").removeClass("active");
                  $(this).addClass("active");
              });
              $('.go-right').on("click", function () {
                  var index = ($(".active", "#navigation").index() + 1) % $(".slider").size();
                  $("#items .item").removeClass("opaque");
                  $("#items .item").eq(index).addClass("opaque");
                  $(".slider").removeClass("active");
                  $("#navigation .slider").eq(index).addClass("active");
              });
              $('.go-left').on("click", function () {
                  var index = ($(".active", "#navigation").index() - 1) % $(".slider").size();
                  $("#items .item").removeClass("opaque");
                  $("#items .item").eq(index).addClass("opaque");
                  $(".slider").removeClass("active");
                  $("#navigation .slider").eq(index).addClass("active");
              });
          });
