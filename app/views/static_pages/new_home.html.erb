            <a rel="nofollow" data-method="post"
               href="<%= timeline_choices_path(timeline_id: choice.id,
                                               friendly_id: choice.slug,
                                               choices: @choices.map { |t| t.id }) %>"
               class="home-btn btn" style="font-size: 1.1em">
                <span class="full">
