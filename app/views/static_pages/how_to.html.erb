<% provide(:title, "Aide") %>
<div id="my-container" class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-2 col-lg-offset-0">
      <div class="list-group">
        <%= link_to "<strong>#{t('views.model.timelines')}</strong>".html_safe, timelines_path,
                    class: "list-group-item", style: "font-size: 1.3em;" %>
        <div class="list-group-item list-group-item-default cursor-not-allowed">
          <%= t('views.navigation.how_to') %>
        </div>
        <%= link_to t('views.navigation.how_to_edit'), how_to_edit_path,
                    class: "list-group-item" %>
        <%= link_to t('views.navigation.faq_long'), faq_path,
                    class: "list-group-item" %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-10 col-md-10 col-lg-8 col-sm-offset-1 col-lg-offset-0">

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3>
            <%= t('views.navigation.how_to') %>
          </h3>
        </div>
        <div class="panel-body">
          <div id="myCarousel" class="col-xs-offset-1 col-xs-10">
            <div class="row">
              <div class="col-xs-12 col-md-3">
                <div class="row">
                  <div class="col-xs-12">
                    <br>
                    <br>
                    <ul class="nav nav-pills nav-justified">
                      <li data-slide-to="0" class="slider active clearfix"><a href="#"><b>Controverse</b></a></li>
                      <li data-slide-to="1" class="slider clearfix"><a href="#"><b>Référence</b></a></li>
                      <li data-slide-to="2" class="slider clearfix"><a href="#"><b>Analyse</b></a></li>
                      <li data-slide-to="3" class="slider clearfix"><a href="#"><b>Synthèse</b></a></li>
                      <li data-slide-to="4" class="slider clearfix"><a href="#"><b>Amèliorer</b></a></li>
                      <li data-slide-to="5" class="slider clearfix"><a href="#"><b>Voter</b></a></li>
                      <li data-slide-to="6" class="slider clearfix"><a href="#"><b>Sélectionner</b></a></li>
                    </ul>
                  </div>
                </div>
              </div>
              <div class="col-xs-12 col-md-9">
                <div id="slide-0" class="item displayed">
                  <img class="img-responsive" src=<%= path_to_image 'organisation-0.png' %>>
                  <div class="caption">
                    <%=  t('views.how_to.four_body') %>
                  </div>
                </div>
                <div id="slide-1" class="item" style="display: none">
                  <img class="img-responsive" src=<%= path_to_image 'organisation-1.png' %>>

                  <div class="caption">
                    <%=  t('views.how_to.four_body') %>
                  </div>
                </div>
                <div id="slide-2" class="item" style="display: none">
                  <img class="img-responsive" src=<%= path_to_image 'organisation-2.png' %>>

                  <div class="caption">
                    <%=  t('views.how_to.four_body') %>
                  </div>
                </div>
                <div id="slide-3" class="item" style="display: none">
                  <img class="img-responsive" src=<%= path_to_image 'organisation-3.png' %>>

                  <div class="caption">
                    <%=  t('views.how_to.four_body') %>
                  </div>
                </div>
                <div id="slide-4" class="item" style="display: none">
                  <img class="img-responsive" src=<%= path_to_image 'organisation-4.png' %>>

                  <div class="caption">
                    <%=  t('views.how_to.four_body') %>
                  </div>
                </div>
                <div id="slide-5" class="item" style="display: none">
                  <img class="img-responsive" src=<%= path_to_image 'organisation-5.png' %>>

                  <div class="caption">
                    <%=  t('views.how_to.four_body') %>
                  </div>
                </div>
                <div id="slide-6" class="item" style="display: none">
                  <img class="img-responsive" src=<%= path_to_image 'organisation-6.png' %>>

                  <div class="caption">
                    <%=  t('views.how_to.four_body') %>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
    $('.slider').on('click', function () {
        var $this = $(this);
        $('.slider').removeClass("active");
        $this.addClass("active");
        console.log($this.data('slide-to'));
        $('.displayed').fadeOut(function () {
            $(this).removeClass('displayed');
            var target = $('#slide-' + $this.data('slide-to'));
            target.fadeIn();
            target.addClass("displayed");
        })
    });
</script>
