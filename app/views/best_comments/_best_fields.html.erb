<div class="panel panel-default coms">
  <div class="panel-heading clearfix">
    <% best_fields.each do |best_field| %>
        <%= render partial: 'best_comments/best_field', locals: { comment: best_field, field: field } %>
    <% end %>
    <% if logged_in? && @my_votes > 0 %>
        <span class="icon-ribbon"></span> Il vous reste
        <%= 12 - @my_votes %>
        crédits à distribuer entre les différentes contributions
        <br/>
        <br/>
            <%= link_to "<span class=\"icon-ribbon normal\"></span>&nbsp Récupérer mes crédits (#{Vote.where( user_id: current_user.id,
                            reference_id: reference_id, field: field ).sum( :value )})".html_safe,
                        vote_path( id: 'field', reference_id: reference_id, field: field), method: :delete,
                        class: "btn btn-danger" %>
    <% end %>
    <span id="hide<%= field %>" class="detail btn btn-info pull-right">
       Masquer <%= fields_plural_hash[field] %>
    </span>
    <br/>
    <br/>
  </div>
</div>

<script type="text/javascript">
    $('#hide<%= field %>').click(function() {
        $('#field<%= field %>').hide(500);
        $('#show<%= field %>').show(500);
        $('#content<%= field %>').show(500);
    });
    $('#show<%= field %>').click(function() {
        $(this).hide(500);
        $('#content<%= field %>').hide(500);
        $('#field<%= field %>').show(500);
    });
</script>